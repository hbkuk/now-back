<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.now.mapper.UserMapper">

    <!-- 사용자 정보를 삽입하는 쿼리 -->
    <insert id="insert" parameterType="User" useGeneratedKeys="true" keyProperty="userIdx">
        INSERT INTO tb_user (id, password, name, nickname)
        VALUES (#{id}, #{password}, #{name}, #{nickname})
    </insert>



    <!-- 중복된 아이디 체크 쿼리 -->
    <select id="existsById" parameterType="java.lang.String" resultType="boolean">
        SELECT COUNT(*) > 0
        FROM tb_user
        WHERE id = #{id}
    </select>



    <!-- 중복된 닉네임 체크 쿼리 -->
    <select id="existsByNickname" parameterType="java.lang.String" resultType="boolean">
        SELECT COUNT(*) > 0
        FROM tb_user
        WHERE nickname = #{nickname}
    </select>


</mapper>
